{
  "openapi" : "3.0.0",
  "info" : {
    "version" : "v1",
    "title" : "Data Sync Agent",
    "description" : "Service responsible for data synchronization of Fitbit platform with HANIoT platform.",
    "contact" : {
      "email" : "haniot@nutes.uepb.edu.br"
    },
    "license" : {
      "name" : "Apache 2.0",
      "url" : "http://www.apache.org/licenses/LICENSE-2.0.html"
    }
  },
  "servers" : [ {
    "description" : "Localhost",
    "url" : "https://localhost:9001"
  }, {
    "description" : "SwaggerHub API Auto Mocking",
    "url" : "https://virtserver.swaggerhub.com/haniot/ds-agent/v1"
  } ],
  "tags" : [ {
    "name" : "fitbit",
    "description" : "Operations for Fitbit client subscriber."
  }, {
    "name" : "users.fitbit.auth",
    "description" : "Operation to manage users authentication data from Fitbit platform."
  }, {
    "name" : "users.fitbit.sync",
    "description" : "Operation to manage users synchronization data from Fitbit platform."
  } ],
  "security" : [ {
    "JWTAuth" : [ ]
  } ],
  "paths" : {
    "/v1/fitbit" : {
      "get" : {
        "security" : [ {
          "JWTAuth" : [ "external:sync" ]
        } ],
        "tags" : [ "fitbit" ],
        "summary" : "Retrieves data from Fitbit client.",
        "description" : "Retrieve app data on Fitbit platform. With this information, customers can use OAuth2 for fitbit authentication and authorization.\n",
        "operationId" : "getFitbit",
        "responses" : {
          "200" : {
            "description" : "Result",
            "content" : {
              "application/json" : {
                "schema" : {
                  "type" : "object",
                  "properties" : {
                    "client_id" : {
                      "type" : "string",
                      "example" : "19CT7O",
                      "description" : "Unique identifier of the app created in Fitbit."
                    },
                    "client_secret" : {
                      "type" : "string",
                      "example" : "19CT7O",
                      "description" : "Application secret key created on Fitbit platform."
                    }
                  }
                }
              }
            }
          },
          "404" : {
            "description" : "The verify code sended is invalid. There is no data to be returned"
          }
        }
      }
    },
    "/v1/users/{patient_id}/fitbit/auth" : {
      "post" : {
        "security" : [ {
          "JWTAuth" : [ "external:sync" ]
        } ],
        "tags" : [ "users.fitbit.auth" ],
        "summary" : "Submit the user auth data.",
        "description" : "Submit user data from the Fitbit account for use in data synchronization. **This means that you obtained the access and refresh token through another client before submitting it here.**\n\nTo find out how to get access token on Fitbit platform see [here](https://dev.fitbit.com/build/reference/web-api/oauth2/)\n",
        "operationId" : "saveAuthData",
        "parameters" : [ {
          "in" : "path",
          "name" : "patient_id",
          "required" : true,
          "description" : "Id of user.",
          "schema" : {
            "type" : "string",
            "example" : "5c86d00c2239a48ea20a0134"
          }
        } ],
        "responses" : {
          "204" : {
            "$ref" : "https://api.swaggerhub.com/domains/nutes.ocariot/api-components/v1#/components/responses/204"
          },
          "400" : {
            "$ref" : "https://api.swaggerhub.com/domains/nutes.ocariot/api-components/v1#/components/responses/400"
          },
          "401" : {
            "$ref" : "https://api.swaggerhub.com/domains/nutes.ocariot/api-components/v1#/components/responses/401"
          },
          "403" : {
            "$ref" : "https://api.swaggerhub.com/domains/nutes.ocariot/api-components/v1#/components/responses/403"
          },
          "500" : {
            "$ref" : "https://api.swaggerhub.com/domains/nutes.ocariot/api-components/v1#/components/responses/500"
          }
        },
        "requestBody" : {
          "content" : {
            "application/json" : {
              "schema" : {
                "$ref" : "#/components/schemas/FitbitAuthData"
              }
            }
          }
        }
      },
      "get" : {
        "security" : [ {
          "JWTAuth" : [ "external:sync" ]
        } ],
        "tags" : [ "users.fitbit.auth" ],
        "summary" : "Get patient auth data.",
        "description" : "Retrieves user data from Fitbit account.",
        "operationId" : "getFitbitAuthData",
        "parameters" : [ {
          "name" : "patient_id",
          "in" : "path",
          "required" : true,
          "description" : "Id of user.",
          "example" : "5c86d00c2239a48ea20a0134",
          "schema" : {
            "type" : "string"
          }
        } ],
        "responses" : {
          "200" : {
            "description" : "Fitbit auth data.",
            "content" : {
              "application/json" : {
                "schema" : {
                  "$ref" : "#/components/schemas/FitbitAuthData"
                }
              }
            }
          },
          "400" : {
            "$ref" : "https://api.swaggerhub.com/domains/nutes.ocariot/api-components/v1#/components/responses/400"
          },
          "401" : {
            "$ref" : "https://api.swaggerhub.com/domains/nutes.ocariot/api-components/v1#/components/responses/401"
          },
          "403" : {
            "$ref" : "https://api.swaggerhub.com/domains/nutes.ocariot/api-components/v1#/components/responses/403"
          },
          "404" : {
            "$ref" : "https://api.swaggerhub.com/domains/nutes.ocariot/api-components/v1#/components/responses/404"
          },
          "500" : {
            "$ref" : "https://api.swaggerhub.com/domains/nutes.ocariot/api-components/v1#/components/responses/500"
          }
        }
      }
    },
    "/v1/users/{patient_id}/fitbit/auth/revoke" : {
      "post" : {
        "security" : [ {
          "JWTAuth" : [ "external:sync" ]
        } ],
        "tags" : [ "users.fitbit.auth" ],
        "summary" : "Request the auth token revoke.",
        "description" : "Revokes the user-associated Fitbit access token.\n",
        "operationId" : "revokeAuthToken",
        "parameters" : [ {
          "name" : "patient_id",
          "in" : "path",
          "required" : true,
          "description" : "Id of user.",
          "example" : "5c86d00c2239a48ea20a0134",
          "schema" : {
            "type" : "string"
          }
        } ],
        "responses" : {
          "204" : {
            "$ref" : "https://api.swaggerhub.com/domains/nutes.ocariot/api-components/v1#/components/responses/204"
          },
          "400" : {
            "$ref" : "https://api.swaggerhub.com/domains/nutes.ocariot/api-components/v1#/components/responses/400"
          },
          "401" : {
            "$ref" : "https://api.swaggerhub.com/domains/nutes.ocariot/api-components/v1#/components/responses/401"
          },
          "403" : {
            "$ref" : "https://api.swaggerhub.com/domains/nutes.ocariot/api-components/v1#/components/responses/403"
          },
          "404" : {
            "$ref" : "https://api.swaggerhub.com/domains/nutes.ocariot/api-components/v1#/components/responses/404"
          },
          "500" : {
            "$ref" : "https://api.swaggerhub.com/domains/nutes.ocariot/api-components/v1#/components/responses/500"
          }
        }
      }
    },
    "/v1/users/{patient_id}/fitbit/sync" : {
      "post" : {
        "security" : [ {
          "JWTAuth" : [ "external:sync" ]
        } ],
        "tags" : [ "users.fitbit.sync" ],
        "summary" : "Request data sync.",
        "description" : "Request user data synchronization on Fitbit platform with OCARIoT platform.",
        "operationId" : "requestDataSync",
        "parameters" : [ {
          "name" : "patient_id",
          "in" : "path",
          "required" : true,
          "description" : "Id of user.",
          "example" : "5c86d00c2239a48ea20a0134",
          "schema" : {
            "type" : "string"
          }
        } ],
        "responses" : {
          "201" : {
            "description" : "The request has been accepted for processing, but the processing has not been completed.",
            "content" : {
              "application/json" : {
                "schema" : {
                  "type" : "object",
                  "properties" : {
                    "activities" : {
                      "type" : "number",
                      "example" : 1
                    },
                    "sleep" : {
                      "type" : "number",
                      "example" : 1
                    },
                    "weights" : {
                      "type" : "number",
                      "example" : 1
                    },
                    "intraday" : {
                      "type" : "object",
                      "properties" : {
                        "steps" : {
                          "type" : "number",
                          "example" : 1
                        },
                        "calories" : {
                          "type" : "number",
                          "example" : 1
                        },
                        "distance" : {
                          "type" : "number",
                          "example" : 1
                        },
                        "active_minutes" : {
                          "type" : "number",
                          "example" : 1
                        },
                        "heartrate" : {
                          "type" : "number",
                          "example" : 1
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "400" : {
            "$ref" : "https://api.swaggerhub.com/domains/nutes.ocariot/api-components/v1#/components/responses/400"
          },
          "401" : {
            "$ref" : "https://api.swaggerhub.com/domains/nutes.ocariot/api-components/v1#/components/responses/401"
          },
          "403" : {
            "$ref" : "https://api.swaggerhub.com/domains/nutes.ocariot/api-components/v1#/components/responses/403"
          },
          "404" : {
            "$ref" : "https://api.swaggerhub.com/domains/nutes.ocariot/api-components/v1#/components/responses/404"
          },
          "500" : {
            "$ref" : "https://api.swaggerhub.com/domains/nutes.ocariot/api-components/v1#/components/responses/500"
          }
        }
      }
    }
  },
  "components" : {
    "securitySchemes" : {
      "JWTAuth" : {
        "type" : "http",
        "scheme" : "bearer",
        "bearerFormat" : "JWT"
      }
    },
    "schemas" : {
      "FitbitAuthData" : {
        "type" : "object",
        "required" : [ "access_token", "refresh_token" ],
        "properties" : {
          "access_token" : {
            "type" : "string",
            "description" : "Access token provided by Fitbit Server on auth proccess.",
            "example" : "eyJhbGciOiJIUzI1NiJ9.eyJleHAiOjE0MzAzNDM3MzUsInNjb3BlcyI6Indwcm8gd2xvYyB3bnV0IHdzbGUgd3NldCB3aHIgd3dlaSB3YWN0IHdzb2MiLCJzdWIiOiJBQkNERUYiLCJhdWQiOiJJSktMTU4iLCJpc3MiOiJGaXRiaXQiLCJ0eXAiOiJhY2Nlc3NfdG9rZW4iLCJpYXQiOjE0MzAzNDAxMzV9.z0VHrIEzjsBnjiNMBey6wtu26yHTnSWz_qlqoEpUlpc"
          },
          "refresh_token" : {
            "type" : "string",
            "description" : "Used to exchange an update token for an access token when the access token is expired.",
            "example" : "c643a63c072f0f05478e9d18b991db80ef6061e4f8e6c822d83fed53e5fafdd7"
          },
          "status" : {
            "type" : "string",
            "readOnly" : true,
            "description" : "Status of token in moment of request. \n\nEach status represents a status of auth data. The mapped values are:\n\n* valid_token - Valid Access Token: The token is valid.\n* expired_token - Expired Access Token: The access token has expired. \n* invalid_token - Invalid Access Token: The access token is invalid. \n* invalid_grant - Invalid Refresh Token: The refresh token is invalid. \n* system - Too Many Requests: The limit of requests has been reached. \n* client_error - Generic Error: A not-mapped Fitbit Client error occurs. \n\n  \n",
            "enum" : [ "valid_token", "invalid_token", "invalid_grant", "expired_token", "system", "client_error" ],
            "example" : "valid_token"
          }
        }
      }
    }
  }
}
